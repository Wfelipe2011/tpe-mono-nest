{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/pipe-core-orders/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/pipe-core-orders/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/pipe-core-orders",
  "projects": {
    "pipe-core-orders": {
      "type": "application",
      "root": "apps/pipe-core-orders",
      "entryFile": "main",
      "sourceRoot": "apps/pipe-core-orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pipe-core-orders/tsconfig.app.json"
      }
    },
    "my-app": {
      "type": "application",
      "root": "apps/my-app",
      "entryFile": "main",
      "sourceRoot": "apps/my-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/my-app/tsconfig.app.json"
      }
    }
  }
}